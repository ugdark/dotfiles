# ------------------------------------------------------------------------
# Oh My Zsh
# ------------------------------------------------------------------------
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
plugins=(git)
source $ZSH/oh-my-zsh.sh
# ------------------------------------------------------------------------
# 言語・ロケール
# ------------------------------------------------------------------------
export LC_ALL=en_US.UTF-8
export LANG=ja_JP.UTF-8
# ------------------------------------------------------------------------
# パス変数
# ------------------------------------------------------------------------
DOT=$HOME/.dotfiles
# ------------------------------------------------------------------------
# homebrew
# ------------------------------------------------------------------------
eval "$(/opt/homebrew/bin/brew shellenv)"
# ------------------------------------------------------------------------
# direnv
# ------------------------------------------------------------------------
eval "$(direnv hook zsh)"
# ------------------------------------------------------------------------
# anyenv
# ------------------------------------------------------------------------
export PATH="/opt/homebrew/bin:$PATH"
eval "$(anyenv init - zsh)"
# ------------------------------------------------------------------------
# VOLTA
# ------------------------------------------------------------------------
export VOLTA_HOME="$HOME/.volta"
export PATH="$VOLTA_HOME/bin:$PATH"
# ------------------------------------------------------------------------
# SDKMAN
# ------------------------------------------------------------------------
export SDKMAN_DIR="$HOME/.sdkman"
[ -s "$SDKMAN_DIR/bin/sdkman-init.sh" ] && source "$SDKMAN_DIR/bin/sdkman-init.sh"
# ------------------------------------------------------------------------
# エイリアス
# ------------------------------------------------------------------------
alias vi='/usr/bin/vim'
alias ssh-config-update="cat ~/.ssh/conf.d/common-config ~/.ssh/conf.d/*.conf > ~/.ssh/config"
alias sjis="iconv -f cp932"
alias utf8_to_sjis="iconv -f UTF8 -t cp932"
alias file-count="ls -1 | wc -l"
alias rm='trash'
alias dotdesk='ln -sf ~/.dotfiles/desk .desk'
# ------------------------------------------------------------------------
# ヒストリ
# ------------------------------------------------------------------------
HISTFILE=~/.zsh_history
HISTSIZE=100000
SAVEHIST=100000
# ------------------------------------------------------------------------
# ローカル設定（会社設定等、環境固有）
# ------------------------------------------------------------------------
[ -f ~/.zshrc.local ] && source ~/.zshrc.local
# ------------------------------------------------------------------------
# docker
# ------------------------------------------------------------------------
# DCT機能の有効化 (改竄チェックon)
export DOCKER_CONTENT_TRUST=1
# 自作Imageの実行時は(0=OFF)にする必要あり
#export DOCKER_CONTENT_TRUST=0
